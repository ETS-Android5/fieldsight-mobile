<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Device Id"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="1212323"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="fcm Token"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fcm_token"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="wererrewrq232sdsd"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="App Version"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="v1.0.1-beta"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Device Id"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_os_version"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Android O"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Latitude"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="1212323"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Longitude"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="1212323"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Error type"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spnr_type"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:entries="@array/bug_type"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Device Name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_device_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint="SAMSUNG"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Report Description"
        android:textColor="#212121"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:minLines="4" />


    <CheckBox
        android:id="@+id/chkbx_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="I agree to send my shown data to the server for the debugging purpose" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="Report bug" />
</LinearLayout>

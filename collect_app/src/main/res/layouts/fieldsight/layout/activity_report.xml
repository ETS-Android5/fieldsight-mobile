<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/general_toolbar"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/device_id"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_device_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="0"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/firebase_token"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fcm_token"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/app_version"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/android_os_version"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_os_version"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text=""
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/latitude"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="0"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/longitude"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="0"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/error_type"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spnr_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:entries="@array/bug_type"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:minHeight="48dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:background="@color/black_160"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/device_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/report_message"
        android:textColor="#212121"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edt_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:focusable="false"/>


    <CheckBox
        android:id="@+id/chkbx_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/report_agree" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/report_bug" />
</LinearLayout>
    </ScrollView>
</LinearLayout>
<RelativeLayout android:id="@+id/card_view_list_item_title_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_large"
    android:foreground="@color/white"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:id="@+id/rela_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large">


            <ImageView
                android:layout_width="@dimen/icon_width_height"
                android:layout_height="@dimen/icon_width_height"
                android:src="@drawable/circle_blue" />

            <ImageView
                android:scaleType="centerInside"
                android:src="@drawable/fieldsight_logo"
                android:id="@+id/iv_notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:tint="@color/white"
                android:textSize="@dimen/text_size_medium" />

        </RelativeLayout>


        <TextView
            android:layout_toLeftOf="@+id/tv_notification_date"
            android:layout_toStartOf="@+id/tv_notification_date"
            android:id="@+id/tv_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/rela_round"
            android:layout_toRightOf="@id/rela_round"
            android:text="Title"

            android:textColor="@color/black" />

        <TextView

            android:id="@+id/tv_list_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_list_item_title"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toEndOf="@id/rela_round"
            android:layout_toRightOf="@id/rela_round"
            android:text="Subtitle" />

        <TextView

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_extra_small"
            android:id="@+id/tv_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:text="2019/22/12" />


    </RelativeLayout>

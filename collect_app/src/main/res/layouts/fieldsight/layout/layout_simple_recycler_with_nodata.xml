<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/general_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_projectlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/prgbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading please wait"
                android:textColor="@color/secondaryColor"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cv_sync_project"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/tv_sync_project"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.SyncProjectsSubtitle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Sync 2 Projects"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_24dp"
                android:textColor="@color/white"
                android:layout_margin="@dimen/activity_horizontal_margin"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_form_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form name"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_last_submitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:text="@string/form_last_submission_datetime"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_education_materials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_vocabulary_major_monotone" />


</LinearLayout>


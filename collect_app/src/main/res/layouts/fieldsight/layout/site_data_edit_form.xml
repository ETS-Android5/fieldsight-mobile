<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/il_site_identifier_editable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site Identifier"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/il_site_name_editable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site name"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/il_phone_editable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="4dp">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site Phone Number"
            android:inputType="phone"
            android:maxLines="1"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/il_address_editable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="4dp">

        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site Address"
            android:inputType="text"
            android:maxLines="3"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/il_public_desc_editable"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site Public Description"
            android:inputType="text"
            android:maxLines="5"
            android:minLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinnerSiteCluster"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/spinner_site_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:spinnerMode="dialog" />


    <Button
        android:id="@+id/btn_site_edit_add_photo"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
        android:drawableStart="@drawable/ic_photo_camera_black_24dp"

        android:text="@string/btn_add_site_photo" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_site_photo_editable"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btn_site_records_location"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:drawableStart="@drawable/ic_location_city_black_24dp"

        android:text="@string/get_location" />

    <include
        layout="@layout/btn_save"
        android:visibility="gone" />

</LinearLayout>
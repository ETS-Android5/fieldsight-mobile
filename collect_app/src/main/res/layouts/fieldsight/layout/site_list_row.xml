<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_site_lst_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout_message_list_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_row"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">


        <include layout="@layout/item_text_circle" />

        <TextView
            android:textSize="@dimen/text_size_small"
            tools:text="Site Name"
            android:id="@+id/site_list_row_site_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:textColor="@color/black" />


        <TextView
            tools:text="Site Identifier"
            android:id="@+id/tv_site_identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_list_row_site_name"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:textSize="@dimen/text_size_small" />

        <TextView
            tools:text="Kathmandu, Nepal"
            android:id="@+id/site_list_row_site_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_site_identifier"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            tools:text="+977-9878787678"
            android:id="@+id/site_list_row_site_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/site_list_row_site_address"
            android:layout_toEndOf="@id/icon_container"
            android:layout_toRightOf="@id/icon_container"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_tag_offline_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_extra_small"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

